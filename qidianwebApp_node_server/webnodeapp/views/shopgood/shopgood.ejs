<!doctype html>
<html>
<head>
    <title>食品列表</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <button class="btn btn-warning">食品列表</button>|
    <a href="/shopgoodadd?shoplist_id=<%=shoplist_id%>" class="btn btn-success">食品添加</a>
    <hr>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>食品名</th>
            <th>简介</th>
            <th>RMB</th>
            <th>图片</th>
            <th>操作</th>

        </tr>
        <% for(var i=0;i<data.length;i++){ %>
            <tr>
                <td><%=data[i].id%></td>
                <td><%=data[i].foodname%></td>
                <td><%=data[i].descr%></td>
                <td><%=data[i].price%></td>
                <td><img src="<%=data[i].foodpic%>" alt="" width="100px" height="100px"></td>
                <td><a href="/shoplistdel?id=<%=data[i].id%>" class="btn btn-danger">删除</a>|<a href="/shoplistedit?id=<%=data[i].id%>" class="btn btn-warning">修改</a></td>
            </tr>
            <%}%>
    </table>
</body>
</html>